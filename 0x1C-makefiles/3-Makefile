SRC = school.c main.c
CC = gcc
OBJ = $(SRC:.c=.o)
RM = rm
NAME = school

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)


clean:
	$(RM) *~ $(NAME) # removes temp files and executable file

oclean:
	$(RM) $(OBJ)  # removes object files

fclean: clean oclean

re: oclean all  # removes object files and recompiles

.PHONY: all clean oclean fclean re

